<?xml version="1.0" encoding="utf-8"?>
<window>
	<defaultcontrol always="true">3</defaultcontrol>
	<controls>
		<include>Dialog_Furniture_BackgroundFade</include>
		<include>Dialog_Furniture_Close_Onclick</include>
		<control type="group">
			<include content="Dialog_Furniture_Background">
				<param name="labelid">1</param>
				<param name="bottomseparatorvisible">[Control.IsVisible(3) + Integer.IsLess(Container(3).NumItems,7)] | [Control.IsVisible(6) + Integer.IsLess(Container(6).NumItems,5)]</param>
				<param name="bottomrightlabel">$VAR[DialogItemsLabelVar]</param>
			</include>
			<control type="image">
				<centerleft>50%</centerleft>
				<bottom>30</bottom>
				<width>40</width>
				<height>40</height>
				<texture colordiffuse="$VAR[DialogColorVar]">icon/default/arrowdown.png</texture>
				<include>Animation_CommonFade</include>
				<visible>Container(3).HasNext | Container(5).HasNext</visible>
			</control>
			<control type="list" id="3">
				<include content="Dialog_DefaultList">
					<param name="id">3</param>
				</include>
			</control>
			<control type="list" id="6">
				<left>20</left>
				<top>88</top>
				<width>654</width>
				<height>420</height>
				<onleft>60</onleft>
				<onright>8001</onright>
				<pagecontrol>60</pagecontrol>
				<itemlayout height="84" width="654">
					<control type="image">
						<width>654</width>
						<height>84</height>
						<texture border="30" colordiffuse="$VAR[PanelColorVar]">button/list-select-nofocus.png</texture>
					</control>
					<control type="label">
						<top>10</top>
						<width>654</width>
						<height>32</height>
						<textoffsetx>50</textoffsetx>
						<font>Font30_Reg</font>
						<textcolor>grey</textcolor>
						<label>$INFO[ListItem.Label]</label>
					</control>
					<control type="label">
						<top>42</top>
						<width>654</width>
						<height>32</height>
						<textoffsetx>50</textoffsetx>
						<font>Font25_Cond</font>
						<textcolor>grey</textcolor>
						<label>$INFO[ListItem.Label2]</label>
					</control>
				</itemlayout>
				<focusedlayout height="84" width="654">
					<control type="image">
						<width>654</width>
						<height>84</height>
						<texture border="10" colordiffuse="$VAR[HighlightColorVar]">button/list-select-focus.png</texture>
						<animation effect="fade" start="100" end="30" time="40" condition="!Control.HasFocus(6)">Conditional</animation>
					</control>
					<control type="label">
						<top>10</top>
						<width>654</width>
						<height>32</height>
						<textoffsetx>50</textoffsetx>
						<font>Font30_Reg</font>
						<label>$INFO[ListItem.Label]</label>
					</control>
					<control type="label">
						<top>42</top>
						<width>654</width>
						<height>32</height>
						<textoffsetx>50</textoffsetx>
						<font>Font25_Cond</font>
						<scroll>true</scroll>
						<label>$INFO[ListItem.Label2]</label>
					</control>
				</focusedlayout>
			</control>
			<control type="image">
				<right>10</right>
				<top>78</top>
				<width>440</width>
				<height>440</height>
				<aspectratio align="center" aligny="center">keep</aspectratio>
				<texture>$INFO[Container(6).Listitem.Icon]</texture>
				<bordertexture border="20" colordiffuse="FF000000">thumb/shadow-square.png</bordertexture>
				<bordersize>20</bordersize>
				<visible>Control.IsVisible(6)</visible>
			</control>
			<control type="grouplist" id="8001">
				<right>60</right>
				<top>28</top>
				<width>400</width>
				<onleft condition="Control.IsVisible(3)">3</onleft>
				<onleft condition="Control.IsVisible(6)">6</onleft>
				<ondown condition="Control.IsVisible(3)">3</ondown>
				<ondown condition="Control.IsVisible(6)">6</ondown>
				<align>right</align>
				<itemgap>10</itemgap>
				<orientation>horizontal</orientation>
				<include content="Dialog_Button_TopRight">
					<param name="id">5</param>
				</include>
				<include content="Dialog_Button_TopRight">
					<param name="id">7</param>
				</include>
			</control>
			<control type="scrollbar" id="60">
				<left>1</left>
				<top>88</top>
				<height>420</height>
				<onright condition="Control.IsVisible(3)">3</onright>
				<onright condition="Control.IsVisible(6)">6</onright>
			</control>
		</control>
	</controls>
</window>