<?xml version="1.0" encoding="utf-8"?>
<window>
	<defaultcontrol always="true">702</defaultcontrol>
	<controls>
		<include>Dialog_Furniture_BackgroundFade</include>
		<include>Dialog_Furniture_Close_Onclick</include>
		<control type="group">
			<include content="Animation_Slide_Top">
				<param name="slide">150</param>
			</include>
			<control type="image">
				<top>140</top>
				<width>1920</width>
				<height>20</height>
				<texture colordiffuse="$VAR[GlowColorVar]">dialogs/glow-top.png</texture>
			</control>
			<control type="image">
				<width>1920</width>
				<height>150</height>
				<texture colordiffuse="$VAR[PanelColorVar]" border="10">dialogs/osd-back.png</texture>
			</control>
			<control type="grouplist" id="650">
				<top>11</top>
				<height>135</height>
				<width>100%</width>
				<align>center</align>
				<scrolltime tween="sine">200</scrolltime>
				<orientation>horizontal</orientation>
				<visible>!VideoPlayer.Content(LiveTV)</visible>
				<include content="Dialog_Button_OSD">
					<param name="id" value="600" />
					<param name="texture" value="osd/buttons/OSDBookMarksNF.png" />
					<param name="onclick" value="ActivateWindow(videobookmarks)" />
				</include>
				<include content="Dialog_Button_OSD">
					<param name="id" value="601" />
					<param name="texture" value="osd/buttons/osdaudionf.png" />
					<param name="onclick" value="ActivateWindow(osdaudiosettings)" />
				</include>
				<include content="Dialog_Button_OSD">
					<param name="id" value="602" />
					<param name="texture" value="osd/buttons/osdvideonf.png" />
					<param name="onclick" value="ActivateWindow(osdvideosettings)" />
				</include>
				<include content="Dialog_Button_OSD">
					<param name="id" value="700" />
					<param name="texture" value="osd/buttons/osdprevtracknf.png" />
					<param name="onclick" value="PlayerControl(Previous)" />
				</include>
				<include content="Dialog_Button_OSD">
					<param name="id" value="701" />
					<param name="texture" value="osd/buttons/osdrewindnf.png" />
					<param name="onclick" value="PlayerControl(Rewind)" />
				</include>
				<include content="Dialog_Button_OSD">
					<param name="id" value="702" />
					<param name="texture" value="osd/buttons/osdstopnf.png" />
					<param name="onclick" value="PlayerControl(Stop)" />
				</include>
				<include content="Dialog_ToggleButton_OSD">
					<param name="id" value="703" />
					<param name="texture" value="osd/buttons/osdpausenf.png" />
					<param name="alttexture" value="osd/buttons/osdplaynf.png" />
					<param name="usealttexture" value="Player.Paused" />
					<param name="onclick" value="PlayerControl(Play)" />
				</include>
				<include content="Dialog_Button_OSD">
					<param name="id" value="704" />
					<param name="texture" value="osd/buttons/osdforwardnf.png" />
					<param name="onclick" value="PlayerControl(Foward)" />
				</include>
				<include content="Dialog_Button_OSD">
					<param name="id" value="705" />
					<param name="texture" value="osd/buttons/osdnexttracknf.png" />
					<param name="onclick" value="PlayerControl(Next)" />
				</include>
				<include content="Dialog_Button_OSD">
					<param name="id" value="800" />
					<param name="texture" value="osd/buttons/osdinfonf.png" />
					<param name="onclick" value="ActivateWindow(fullscreeninfo)" />
				</include>
				<include content="Dialog_Button_OSD">
					<param name="id" value="801" />
					<param name="texture" value="osd/buttons/osdsubtitlesnf.png" />
					<param name="onclick" value="ActivateWindow(SubtitleSearch)" />
				</include>
				<include content="Dialog_Button_OSD">
					<param name="id" value="802" />
					<param name="texture" value="osd/buttons/osddvdnf.png" />
					<param name="onclick" value="PlayerControl(ShowVideoMenu)" />
					<param name="visible" value="VideoPalyer.HasMenu" />
				</include>
				<include content="Dialog_Button_OSD">
					<param name="id" value="803" />
					<param name="texture" value="osd/buttons/osd3dnf.png" />
					<param name="onclick" value="StereoMode" />
					<param name="visible" value="VideoPalyer.IsStereoscopic" />
				</include>
				<include content="Dialog_Button_OSD">
					<param name="id" value="804" />
					<param name="texture" value="osd/buttons/osdskinnf.png" />
					<param name="onclick" value="ActivateWindow(1118)" />
				</include>
			</control>
		</control>
		<control type="group">
			<visible>!Window.IsActive(fullscreeninfo) | !VideoPlayer.Content(LiveTV)</visible>
			<include content="Animation_Slide_Bottom">
				<param name="slide">87</param>
			</include>
			<bottom>0</bottom>
			<width>1920</width>
			<height>40</height>
			<control type="image">
				<top>40</top>
				<width>1920</width>
				<height>20</height>
				<texture colordiffuse="$VAR[GlowColorVar]">dialogs/glow-top.png</texture>
			</control>
			<control type="image">
				<top>-10</top>
				<width>1920</width>
				<height>50</height>
				<texture colordiffuse="$VAR[PanelColorVar]" border="10" flipy="true">dialogs/osd-back.png</texture>
			</control>
			<control type="progress">
				<centerleft>50%</centerleft>
				<top>10</top>
				<width>1600</width>
				<info>Player.ProgressCache</info>
				<texturebg border="8">dialogs/progress-control/progress-back.png</texturebg>
				<midtexture border="8">dialogs/progress-control/progress-mid-cache.png</midtexture>
			</control>
			<control type="progress">
				<centerleft>50%</centerleft>
				<top>10</top>
				<width>1600</width>
				<texturebg border="8">dialogs/progress-control/progress-back-cache.png</texturebg>
				<info>Player.Progress</info>
			</control>
			<control type="slider">
				<centerleft>50%</centerleft>
				<top>10</top>
				<width>1600</width>
				<height>20</height>
				<action>seek</action>
				<texturesliderbar />
				<textureslidernib />
				<textureslidernibfocus />
			</control>
			<control type="label">
				<width>150</width>
				<height>40</height>
				<align>right</align>
				<font>Font28_Reg</font>
				<label>$INFO[Player.Time]</label>
			</control>
			<control type="label">
				<right>0</right>
				<width>150</width>
				<height>40</height>
				<font>Font28_Reg</font>
				<label>$INFO[Player.Duration]</label>
			</control>
		</control>
	</controls>
</window>