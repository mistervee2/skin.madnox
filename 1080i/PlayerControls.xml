						<top>355</top>
						<visible>Player.HasVideo</visible>
						<include condition="VideoPlayer.Content(LiveTV)">LiveTVVideoOSD</include>
						<include condition="!VideoPlayer.Content(LiveTV)">DefaultVideoOSD</include>
					</control>
					<control type="group">
						<top>355</top>
						<visible>Player.HasAudio</visible>
