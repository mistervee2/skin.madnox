<?xml version="1.0" encoding="utf-8"?>
<window id="1111" type="dialog">
	<defaultcontrol always="true">9001</defaultcontrol>
	<controls>
		<control type="group">
			<visible>true</visible>
			<include content="Animation_Dialog_MediaMenu">
				<param name="width" value="410" />
			</include>
			<include>Animation_Dialog_MediaMenu</include>
			<left>-410</left>
			<control type="image">
				<left>0</left>
				<width>410</width>
				<height>1080</height>
				<texture colordiffuse="$VAR[DialogPanelColorVar]">dialog/mediamenu-back.png</texture>
			</control>
			<control type="image">
				<left>390</left>
				<width>20</width>
				<height>1080</height>
				<texture colordiffuse="$VAR[DialogGlowColorVar]">dialog/mediamenu-glow.png</texture>
			</control>
			<control type="list" id="9001">
				<left>0</left>
				<top>0</top>
				<width>400</width>
				<height>1080</height>
				<onleft condition="!Skin.HasSetting(disablequicknav)">ActivateWindow(1113)</onleft>
				<onright>Dialog.Close(1111)</onright>
				<onup>9001</onup>
				<ondown>9001</ondown>
				<onback>Dialog.Close(1111)</onback>
				<itemlayout height="90" width="400">
					<control type="image">
						<top>15</top>
						<left>10</left>
						<width>70</width>
						<height>70</height>
						<texture colordiffuse="grey2">$INFO[ListItem.Icon]</texture>
					</control>
					<control type="label">
						<left>90</left>
						<width>300</width>
						<height>90</height>
						<font>Font_Reg29</font>
						<textcolor>grey2</textcolor>
						<aligny>center</aligny>
						<label>$INFO[ListItem.Label]</label>
					</control>
					<control type="image">
						<width>400</width>
						<height>90</height>
						<texture colordiffuse="$VAR[DialogPanelColorVar]" border="30">button/list-select-nofocus.png</texture>
					</control>
				</itemlayout>
				<focusedlayout height="90" width="400">
					<control type="image">
						<top>15</top>
						<left>10</left>
						<width>70</width>
						<height>70</height>
						<texture colordiffuse="white6">$INFO[ListItem.Icon]</texture>
					</control>
					<control type="label">
						<left>90</left>
						<width>300</width>
						<height>90</height>
						<font>Font_Reg29</font>
						<textcolor>white6</textcolor>
						<aligny>center</aligny>
						<label>$INFO[ListItem.Label]</label>
					</control>
					<control type="image">
						<width>400</width>
						<height>90</height>
						<texture colordiffuse="$VAR[DialogHighlightColorVar]" border="10">button/list-select-focus.png</texture>
					</control>
				</focusedlayout>
				<content>
					<include condition="Window.IsActive(weather)">MediaMenu_Content_Weather</include>
				</content>
			</control>
		</control>
	</controls>
</window>