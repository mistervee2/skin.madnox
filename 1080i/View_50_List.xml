<?xml version="1.0" encoding="utf-8"?>
<includes>
	<include name="View_50_List">
		<!-- Backdrop -->
		<include>Background_Nowplaying</include>
		<include content="Background_Fanart_Default">
			<param name="imagepath">$VAR[ViewTypeFanartVar]</param>
		</include>
		<!-- Floor -->
		<control type="group">
			<visible>!Skin.HasSetting(View50HideFloor)</visible>
			<include content="Animation_Slide_Bottom">
				<param name="slide">218</param>
				<param name="opencondition">$EXP[Settings_Animation_OpenCondition]</param>
				<param name="closecondition">$EXP[Settings_Animation_CloseCondition]</param>
			</include>
			<include>Floor_Background_Right</include>
		</control>
		<!-- Left Content -->
		<control type="group">
			<include content="Animation_Slide_Left">
				<param name="slide">1263</param>
				<param name="opencondition">true</param>
				<param name="closecondition">true</param>
			</include>
			<include content="Animation_FurnitureShift">
				<param name="slidetopbarcondition">Skin.HasSetting(View50HideTopBar)</param>
				<param name="slidefloorcondition">!Skin.HasSetting(View50HideTopBar) + Skin.HasSetting(View50HideFloor)</param>
			</include>
			<include content="Panel_Background_Default">
				<param name="width">1163</param>
				<param name="reflect">!Skin.HasSetting(View50HideFloor)</param>
			</include>
			<control type="image">
				<left>953</left>
				<top>145</top>
				<width>200</width>
				<height>800</height>
				<texture colordiffuse="$VAR[PanelColorVar]" border="40">panel/list-detail-underlay.png</texture>
				<visible>Container.Content(movies) | Container.Content(actors) | Container.Content(directors) | Container.Content(sets) | Container.Content(tvshows) | Container.Content(seasons) | Container.Content(episodes) | Container.Content(musicvideos) | Container.Content(artists) | Container.Content(albums) | Container.Content(songs)</visible>
			</control>
			<control type="list" id="50">
				<left>100</left>
				<top>145</top>
				<width>1133</width>
				<height>800</height>
				<onleft>9000</onleft>
				<onright>60</onright>
				<viewtype label="535">list</viewtype>
				<pagecontrol>60</pagecontrol>
				<itemlayout height="100" condition="true">
					<control type="image">
						<texture border="30" colordiffuse="$VAR[PanelColorVar]">button/list-select-nofocus.png</texture>
					</control>
					<control type="image">
						<left>20</left>
						<top>8</top>
						<width>120</width>
						<height>84</height>
						<aspectratio>keep</aspectratio>
						<texture fallback="DefaultFile.png">$VAR[ViewListIconVar]</texture>
					</control>
					<control type="label">
						<left>160</left>
						<top>12</top>
						<width>693</width>
						<height>40</height>
						<label fallback="..">$VAR[ViewTitleLabelVar]</label>
						<font>Font38_Reg</font>
						<textcolor>white2</textcolor>
						<visible>String.IsEqual(listitem.dbtype,movie) | String.IsEqual(listitem.dbtype,tvshow) | String.IsEqual(listitem.dbtype,season) | String.IsEqual(listitem.dbtype,episode) | String.IsEqual(listitem.dbtype,artist) | String.IsEqual(listitem.dbtype,album) | String.IsEqual(listitem.dbtype,song) | String.IsEqual(listitem.dbtype,musicvideo)</visible>
					</control>
					<control type="label">
						<left>160</left>
						<width>693</width>
						<height>100</height>
						<label fallback="..">$VAR[ViewTitleLabelVar]</label>
						<font>Font38_Reg</font>
						<textcolor>white2</textcolor>
						<visible>!String.IsEqual(listitem.dbtype,movie) + !String.IsEqual(listitem.dbtype,tvshow) + !String.IsEqual(listitem.dbtype,season) + !String.IsEqual(listitem.dbtype,episode) + !String.IsEqual(listitem.dbtype,artist) + !String.IsEqual(listitem.dbtype,album) + !String.IsEqual(listitem.dbtype,song) + !String.IsEqual(listitem.dbtype,musicvideo)</visible>
					</control>
					<control type="label">
						<left>160</left>
						<top>52</top>
						<width>693</width>
						<height>30</height>
						<font>Font28_Reg</font>
						<label>$VAR[ViewSubTitleLabelVar]</label>
						<textcolor>grey</textcolor>
					</control>
					<control type="label">
						<right>85</right>
						<top>12</top>
						<width>190</width>
						<height>40</height>
						<align>center</align>
						<label>$VAR[ViewLabel2Var]</label>
						<font>Font29_Cond</font>
						<textcolor>grey</textcolor>
						<visible>!String.IsEqual(listitem.dbtype,actor) + !String.IsEqual(listitem.dbtype,director) + !String.IsEqual(listitem.dbtype,files) + !Container.Content(images)</visible>
					</control>
					<control type="label">
						<right>85</right>
						<width>190</width>
						<height>100</height>
						<align>center</align>
						<label>$VAR[ViewLabel2Var]</label>
						<font>Font29_Cond</font>
						<textcolor>grey</textcolor>
						<visible>String.IsEqual(listitem.dbtype,actor) | String.IsEqual(listitem.dbtype,director) | String.IsEqual(listitem.dbtype,files) | Container.Content(images)</visible>
					</control>
					<control type="image">
						<right>85</right>
						<top>52</top>
						<width>190</width>
						<height>30</height>
						<aspectratio>keep</aspectratio>
						<texture>$VAR[ViewImageRatingVar]</texture>
						<colordiffuse>grey</colordiffuse>
					</control>
					<control type="image">
						<right>20</right>
						<width>40</width>
						<height>100</height>
						<aligny>center</aligny>
						<aspectratio>keep</aspectratio>
						<texture colordiffuse="$VAR[ColorDiffuseVar]">$VAR[WatchedIconVar]</texture>
						<visible>!Container.Content(songs)</visible>
					</control>
				</itemlayout>
				<focusedlayout height="100" condition="true">
					<control type="image">
						<texture border="10" colordiffuse="$VAR[HighlightColorVar]">button/list-select-focus.png</texture>
						<animation effect="fade" start="100" end="25" tween="sine" easing="inout" time="240" condition="!Control.HasFocus(50)">Conditional</animation>
					</control>
					<control type="image">
						<left>20</left>
						<top>8</top>
						<width>120</width>
						<height>84</height>
						<aspectratio>keep</aspectratio>
						<texture fallback="DefaultFile.png">$VAR[ViewListIconVar]</texture>
					</control>
					<control type="label">
						<left>160</left>
						<top>12</top>
						<width>693</width>
						<height>40</height>
						<label fallback="..">$VAR[ViewTitleLabelVar]</label>
						<font>Font38_Reg</font>
						<visible>String.IsEqual(listitem.dbtype,movie) | String.IsEqual(listitem.dbtype,tvshow) | String.IsEqual(listitem.dbtype,season) | String.IsEqual(listitem.dbtype,episode) | String.IsEqual(listitem.dbtype,artist) | String.IsEqual(listitem.dbtype,album) | String.IsEqual(listitem.dbtype,song) | String.IsEqual(listitem.dbtype,musicvideo)</visible>
					</control>
					<control type="label">
						<left>160</left>
						<width>693</width>
						<height>100</height>
						<label fallback="..">$VAR[ViewTitleLabelVar]</label>
						<font>Font38_Reg</font>
						<visible>!String.IsEqual(listitem.dbtype,movie) + !String.IsEqual(listitem.dbtype,tvshow) + !String.IsEqual(listitem.dbtype,season) + !String.IsEqual(listitem.dbtype,episode) + !String.IsEqual(listitem.dbtype,artist) + !String.IsEqual(listitem.dbtype,album) + !String.IsEqual(listitem.dbtype,song) + !String.IsEqual(listitem.dbtype,musicvideo)</visible>
					</control>
					<control type="label">
						<left>160</left>
						<top>52</top>
						<width>693</width>
						<height>30</height>
						<font>Font28_Reg</font>
						<textcolor>white2</textcolor>
						<label>$VAR[ViewSubTitleLabelVar]</label>
					</control>
					<control type="label">
						<right>85</right>
						<top>12</top>
						<width>190</width>
						<height>40</height>
						<align>center</align>
						<label>$VAR[ViewLabel2Var]</label>
						<font>Font29_Cond</font>
						<textcolor>grey</textcolor>
						<visible>!String.IsEqual(listitem.dbtype,actor) + !String.IsEqual(listitem.dbtype,director) + !String.IsEqual(listitem.dbtype,files) + !Container.Content(images)</visible>
					</control>
					<control type="label">
						<right>85</right>
						<width>190</width>
						<height>100</height>
						<align>center</align>
						<label>$VAR[ViewLabel2Var]</label>
						<font>Font29_Cond</font>
						<textcolor>grey</textcolor>
						<visible>String.IsEqual(listitem.dbtype,actor) | String.IsEqual(listitem.dbtype,director) | String.IsEqual(listitem.dbtype,files) | Container.Content(images)</visible>
					</control>
					<control type="image">
						<right>85</right>
						<top>52</top>
						<width>190</width>
						<height>30</height>
						<aspectratio>keep</aspectratio>
						<texture>$VAR[ViewImageRatingVar]</texture>
					</control>
					<control type="image">
						<right>20</right>
						<width>40</width>
						<height>100</height>
						<aligny>center</aligny>
						<aspectratio>keep</aspectratio>
						<texture colordiffuse="$VAR[ColorDiffuseVar]">$VAR[WatchedIconVar]</texture>
						<visible>!Container.Content(songs)</visible>
					</control>
				</focusedlayout>
			</control>
			<control type="scrollbar" id="60">
				<left>1213</left>
				<top>143</top>
				<bottom>132</bottom>
				<height>800</height>
				<onleft>50</onleft>
			</control>
		</control>
		<!-- Right Content -->
		<control type="group">
			<right>85</right>
			<width>567</width>
			<include content="Animation_Slide_Right">
				<param name="slide">652</param>
				<param name="opencondition">true</param>
				<param name="closecondition">true</param>
			</include>
			<include content="Animation_FurnitureShift">
				<param name="slidetopbarcondition">Skin.HasSetting(view50HideTopBar)</param>
				<param name="slidefloorcondition">!Skin.HasSetting(View50HideTopBar) + Skin.HasSetting(View50HideFloor)</param>
			</include>
			<control type="group">
				<!-- <visible>Container.Content(genres)</visible> -->
				<control type="image">
					<bottom>117</bottom>
					<width>567</width>
					<height>835</height>
					<fadetime>400</fadetime>
					<bordersize>15</bordersize>
					<aspectratio aligny="bottom">keep</aspectratio>
					<bordertexture border="30">thumb/poster-frame.png</bordertexture>
					<texture diffuse="thumb/poster-mask.png">$VAR[PosterVar]</texture>
				</control>
				<control type="image">
					<bottom>-688</bottom>
					<width>567</width>
					<height>835</height>
					<fadetime>400</fadetime>
					<bordersize>15</bordersize>
					<aspectratio aligny="top">keep</aspectratio>
					<texture flipy="true" diffuse="thumb/poster-flipmask.png">$VAR[PosterVar]</texture>
				</control>
			</control>
		</control>
		<!-- Topbar -->
		<control type="group">
			<visible>!Skin.HasSetting(View50HideTopBar)</visible>
			<include content="Animation_Slide_Top">
				<param name="slide">90</param>
				<param name="opencondition">$EXP[Settings_Animation_OpenCondition]</param>
				<param name="closecondition">$EXP[Settings_Animation_CloseCondition]</param>
			</include>
			<include content="TopBar">
				<param name="breadcrumbs_label">$VAR[BreadcrumbsVideoVar]</param>
				<param name="breadcrumbs_icon">video.png</param>
			</include>
		</control>
	</include>
</includes>