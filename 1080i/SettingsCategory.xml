<?xml version="1.0" encoding="utf-8"?>
<window>
	<defaultcontrol>3</defaultcontrol>
	<controls>
		<!-- Backdrop -->
		<include>Background_MediaPlaying</include>
		<control type="multiimage">
			<include>FullscreenDimensions</include>
			<aspecratio>scale</aspecratio>
			<imagepath background="true">$VAR[SettingsFanartVar]</imagepath>
			<include content="Animation_Fanart">
				<param name="opencondition" value="![Window.Previous(settings) | Window.Previous(skinsettings)]" />
				<param name="closecondition" value="![Window.Next(settings) | Window.Next(skinsettings)]" />
			</include>
			<visible>$EXP[Fanart_Visible_MediaPlaying]</visible>
		</control>
		<!-- Floor -->
		<control type="group">
			<visible>!Skin.HasSetting(SettingsHideFloor)</visible>
			<include content="Animation_Slide_Bottom">
				<param name="opencondition" value="![Window.Previous(settings) | Window.Previous(skinsettings)]" />
				<param name="closecondition" value="![Window.Next(settings) | Window.Next(skinsettings)]" />
			</include>
			<include>Floor_Background_Default</include>
		</control>
		<!-- Content -->
		<control type="group">
			<include>Animation_Slide_Bottom</include>
			<animation effect="slide" end="0,20" time="400" tween="cubic" easing="out" condition="!Skin.HasSetting(SettingsHideTopBar)">Conditional</animation>
			<include content="Panel_Background_Settings">
				<param name="reflect" value="!Skin.HasSetting(SettingsHideFloor)" />
			</include>
			<control type="label" id="2">
				<top>90</top>
				<left>116</left>
				<width>298</width>
				<height>100</height>
				<font>Font33_Bold_Caps</font>
			</control>
			<control type="grouplist" id="3">
				<left>91</left>
				<top>190</top>
				<width>323</width>
				<height>768</height>
				<onleft>9000</onleft>
				<onright>5</onright>
			</control>
			<control type="button" id="10">
				<width>323</width>
				<height>68</height>
				<textoffsetx>25</textoffsetx>
				<font>Font38_Cond</font>
				<textcolor>grey</textcolor>
				<texturenofocus />
			</control>
			<control type="label">
				<top>90</top>
				<left>461</left>
				<width>1413</width>
				<height>100</height>
				<label>Options</label>
				<font>Font33_Bold_Caps</font>
			</control>
			<control type="label" id="14">
				<description>Default Label</description>
				<width>1413</width>
				<textoffsetx>45</textoffsetx>
				<height>68</height>
				<align>left</align>
				<font>Font30_Bold</font>
				<textcolor>$VAR[HighlightColorVar]</textcolor>
			</control>
			<control type="grouplist" id="5">
				<left>416</left>
				<top>190</top>
				<width>1413</width>
				<height>612</height>
				<pagecontrol>60</pagecontrol>
				<onleft>3</onleft>
				<onright>60</onright>
			</control>
			<control type="image" id="11">
				<description>separator image</description>
				<height>1</height>
				<texture />
			</control>
			<control type="textbox" id="6">
				<description>description area</description>
				<left>465</left>
				<top>846</top>
				<width>1315</width>
				<height>120</height>
				<align>left</align>
				<textcolor>white2</textcolor>
				<font>Font29_Cond</font>
				<autoscroll time="3000" delay="4000" repeat="5000">true</autoscroll>
			</control>
			<control type="scrollbar" id="60">
				<right>71</right>
				<top>150</top>
				<bottom></bottom>
				<height>800</height>
				<onleft>5</onleft>
			</control>
		</control>
		<control type="button" id="7">
			<include>Settings_Button</include>
		</control>
		<control type="radiobutton" id="8">
			<radioposx>1306</radioposx>
			<include>Settings_Button</include>
		</control>
		<control type="spincontrolex" id="9">
			<include>Settings_Button</include>
		</control>
		<!-- Topbar -->
		<control type="group">
			<visible>!Skin.HasSetting(SettingsHideTopBar)</visible>
			<include content="Animation_Slide_Top">
				<param name="slide" value="90" />
				<param name="opencondition" value="![Window.Previous(settings) | Window.Previous(skinsettings)]" />
				<param name="closecondition" value="![Window.Next(settings) | Window.Next(skinsettings)]" />
			</include>
			<include content="TopBar">
				<param name="breadcrumbs_label" value="$LOCALIZE[5]$INFO[Control.GetLabel(2), / ]" />
				<param name="breadcrumbs_icon" value="setting.png" />
			</include>
		</control>
		<!-- Media Menu -->
		<include>MediaMenu_MouseOverlay</include>
		<control type="group">
			<include>MediaMenu_Common</include>
			<control type="grouplist" id="9000">
				<usecontrolcoords>true</usecontrolcoords>
				<onleft condition="!Skin.HasSetting(disablequicknav)">ActivateWindow(1113)</onleft>
				<onright>3</onright>
				<onback>7500</onback>
				<include>MediaMenu_Settings</include>
			</control>
		</control>
	</controls>
</window>